class rPathRepeater(PackageRecipe):
    name = 'rpath-repeater'
    version = '0.1'

    buildRequires = [
        'make:runtime',
        'python:devel',
        'pywbem:python',
        'rmake3:python',
    ]

    def setup(r):
        r.addMercurialSnapshot()
        r.MakeInstall()
        r.CompilePython('%(libdir)s')
