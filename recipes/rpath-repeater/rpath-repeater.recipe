class rPathRepeater(PackageRecipe):
    name = 'rpath-repeater'
    version = '0.1'

    buildRequires = [
        'lxml:python',
        'make:runtime',
        'paramiko:python',
        'pyOpenSSL:python',
        'python:devel',
        'pywbem:python',
        'rmake3:python',
        'rpath-tools:python',
        'smartform:python',
        'wmiclient:python',
        'xobj:python',
    ]

    def setup(r):
        r.addMercurialSnapshot()
        r.MakeInstall()
        r.CompilePython('%(libdir)s')

        r.InitialContents('/etc/rmake3/node.d/50_zone.conf')
